<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/storeInofSpinner"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:text="文字隱藏"
        android:id="@+id/hidecheckBox"
        android:layout_weight="0.05"
        android:onClick="putcheckbok"
        android:layout_below="@+id/storeInofSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_submit"
        android:id="@+id/button"
        android:layout_weight="0.05"
        android:onClick="submit"
        android:layout_below="@+id/hidecheckBox"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_nextpage"
        android:id="@+id/button2"
        android:layout_weight="0.05"
        android:onClick="nexttopage"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/historyListView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
