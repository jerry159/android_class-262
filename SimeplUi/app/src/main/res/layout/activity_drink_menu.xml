<?xml version="1.0" encoding="utf-8"?>

<!-- padding 字體間距大小   -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:nestedScrollingEnabled="true"
    android:id="@+id/root">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 當 android:layout_width="0dp" 可以透過 android:layout_weight 定義尚未被分配到空間，設定到weigth給它，分配比重
                t-w
                bu-w
                bu-w
                space

                是用 1:1:1 變成
                textviwe.w = t-w + space*(1/3)
                button1.w = b1-w + space*(1/3)
                button1.w = b2-w + space*(1/3)
                是用 1:2:2
                textviwe.w = t-w + space*(1/3)
                button1.w = b1-w + space*(2/3)
                button1.w = b2-w + space*(2/3)

        -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="black tea"
            android:id="@+id/textView2"
            android:layout_weight="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:onClick="add" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:onClick="add" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="milk tea"
            android:id="@+id/textView3"
            android:layout_weight="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:onClick="add" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:onClick="add" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="green tea"
            android:id="@+id/textView4"
            android:layout_weight="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:onClick="add" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:onClick="add" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/button8"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:layout_weight="1"
            android:id="@+id/button9" />

    </LinearLayout>

</LinearLayout>
